<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
      integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="/stylesheets/nav-style.css" />
    <link rel="stylesheet" href="/stylesheets/game-snake-mobile-style.css" />
    <title>Snake Game</title>
  </head>
  <body>
    <section id="select">
      <div class="content">
        <label for="difficulty-select">Pilih tingkat kesulitan</label>
        <select id="difficulty-select" onchange="difficultySelect()">
          <option value="easy">Mudah</option>
          <option value="medium">Sedang</option>
          <option value="hard">Sulit</option>
        </select>
        <button onclick="start()" id="s">Mulai</button>
      </div>
    </section>

    <section id="game-over">
      <div class="content">
        <h1>Game Over</h1>
        <p>Dengan Score: <span id="score-game-over"></span></p>
        <div class="btn">
          <button onclick="reset()">Mulai Ulang</button>
          <button onclick="main()">Main Menu</button>
        </div>
      </div>
    </section>

    <section class="snake-game" id="snake-game">
      <div class="snake-board">
        <h1>Snake Game</h1>
        <div class="board">
          <canvas id="snake-canvas" width="360" height="360"> </canvas>
        </div>
      </div>

      <div class="btn-snake">
        <button class="arrow-button" onclick="move('left')">
          <i class="fas fa-arrow-left"></i>
        </button>
        <button class="arrow-button" onclick="move('up')">
          <i class="fas fa-arrow-up"></i>
        </button>
        <button class="arrow-button" onclick="move('down')">
          <i class="fas fa-arrow-down"></i>
        </button>
        <button class="arrow-button" onclick="move('right')">
          <i class="fas fa-arrow-right"></i>
        </button>
      </div>

      <div class="info">
        <h3>Info Player</h3>
        <div class="info-user">
          <p>Player: <%= username %></p>
          <p>Score: <span id="current-score"></span></p>
          <p>High Score: <%= highscore %></p>
        </div>
      </div>
    </section>

    <script src="/javascript/game-snake-mobile-script.js"></script>
    <script src="/javascript/nav-script.js"></script>
  </body>
</html>
